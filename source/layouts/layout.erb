    <div class="navbar-wagon">
      <!-- Logo -->
    <% if I18n.locale == :fr %>
      <a href="/REFUGE_JEANDEL/fr" class="navbar-wagon-brand">
        <%=image_tag "logo-white.png", height: 30 %>
      </a>
    <% elsif I18n.locale == :en %>
      <a href="/REFUGE_JEANDEL/en" class="navbar-wagon-brand">
        <%=image_tag "logo-white.png", height: 30 %>
      </a>
    <% else %>
      <a href="/REFUGE_JEANDEL/es" class="navbar-wagon-brand">
        <%=image_tag "logo-white.png", height: 30 %>
      </a>
    <% end %>

<!-- drapeaux -->
      <div class="dropdown">
        <i class="dropdown-toggle navbar-wagon-item" data-toggle="dropdown">
        <% if I18n.locale == :fr %>
          <div class="drap3"><%=image_tag "France.png", height: 30 %> </div>
        <% elsif I18n.locale == :en %>
          <div class="drap3"><%=image_tag "UK.png", height: 30 %> </div>
        <% else %>
          <div class="drap3"><%=image_tag "Spain.png", height: 30 %> </div>
        <% end %>
          </i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li class="drapeaux">
            <%= link_to (image_tag "France.png", height: 30), "/fr/#{current_page.path.split('/').last}" %>
            <div class="drap2"> <%= link_to "Français", "/fr/#{current_page.path.split('/').last}" %> </div>
          </li>
          <li class="drapeaux">
            <%= link_to (image_tag "UK.png", height: 30), "/en/#{current_page.path.split('/').last}" %>
            <div class="drap2"> <%= link_to "English", "/en/#{current_page.path.split('/').last}" %> </div>
          </li>
          <li class="drapeaux">
            <%= link_to (image_tag "Spain.png", height: 30), "/es/#{current_page.path.split('/').last}" %>
            <div class="drap2"> <%= link_to "Castellano", "/es/#{current_page.path.split('/').last}" %> </div>
          </li>
        </ul>
      </div>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">

        <% if I18n.locale == :fr %>
          <%= link_to "LE REFUGE", "/about.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "PRESTATIONS/TARIFS", "/prestations.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "GALLERIE PHOTOS", "/photos.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "CONTACT", "/contact.html", class: "navbar-wagon-item navbar-wagon-link" %>
        <% elsif I18n.locale == :en %>
          <%= link_to "THE REFUGE", "/about.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "SERVICES/PRICES", "/prestations.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "PHOTO GALLERY", "/photos.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "CONTACT", "/contact.html", class: "navbar-wagon-item navbar-wagon-link" %>
        <% else %>
          <%= link_to "EL REFUGIO", "/about.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "PRESTACIONES Y TARIFAS", "/prestations.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "GALERIA FOTO", "/photos.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "CONTACTO", "/contact.html", class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>




