<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= favicon_tag 'images/favicon.png' %>
  </head>
  <body>


    <div class="navbar-wagon">


      <!-- Logo -->
    <% if I18n.locale == :fr %>
      <a href="/fr" class="navbar-wagon-brand">
        <%=image_tag "logo.png", height: 30 %>
      </a>
    <% elsif I18n.locale == :en %>
      <a href="/en" class="navbar-wagon-brand">
        <%=image_tag "logo.png", height: 30 %>
      </a>
    <% else %>
      <a href="/es" class="navbar-wagon-brand">
        <%=image_tag "logo.png", height: 30 %>
      </a>
    <% end %>


<!-- drapeaux -->
        <div class="dropdown">
          <i class="dropdown-toggle navbar-wagon-item" data-toggle="dropdown">
          <% if I18n.locale == :fr %>
            <%=image_tag "France.png", height: 30 %>
          <% elsif I18n.locale == :en %>
            <%=image_tag "UK.png", height: 30 %>
          <% else %>
            <%=image_tag "Spain.png", height: 30 %>
          <% end %>
            </i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

            <li> <%= link_to (image_tag "France.png", height: 30), "/fr/#{current_page.path.split('/').last}" %> Fran√ßais</li>
            <li><%= link_to (image_tag "UK.png", height: 30), "/en/#{current_page.path.split('/').last}" %>English</li>
            <li><%= link_to (image_tag "Spain.png", height: 30), "/es/#{current_page.path.split('/').last}" %>Castellano</li>
          </ul>
        </div>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">

        <% if I18n.locale == :fr %>
          <%= link_to "LE REFUGE", "/about.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "PRESTATIONS/TARIFS", "/prestations.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "GALLERIE PHOTOS", "/photos.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "CONTACT", "/contact.html", class: "navbar-wagon-item navbar-wagon-link" %>
        <% elsif I18n.locale == :en %>
          <%= link_to "THE REFUGE", "/about.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "SERVICES/PRICES", "/prestations.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "PHOTO GALLERY", "/photos.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "CONTACT", "/contact.html", class: "navbar-wagon-item navbar-wagon-link" %>
        <% else %>
          <%= link_to "EL REFUGIO", "/about.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "PRESTACIONES Y TARIFAS", "/prestations.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "GALERIA FOTO", "/photos.html", class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to "CONTACTO", "/contact.html", class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>




        <!-- Profile picture with dropdown list -->
      </div>

      <!-- Dropdown appearing on mobile only -->
      <div class="navbar-wagon-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><a href="/about.html">LE REFUGE</a></li>
            <li><a href="/prestations.html">PRESTATIONS/TARIFS</a></li>
            <li><a href="/photos.html">GGALLERIE PHOTOS</a></li>
            <li><a href="/contact.html">CONTACT</a></li>
          </ul>
        </div>
      </div>
    </div>


    <%= yield %>
  </body>
</html>

